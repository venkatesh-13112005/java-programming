import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner obj = new Scanner(System.in);
        int n = obj.nextInt();
        double s= 0;
        int a[] = new int[n];
        for(int i=0;i<n;i++){
            a[i]=obj.nextInt();
            s+=a[i];
        }
        double m = s/n;
        System.out.printf("Array Mean Value is %.2f",m);
    }
}
